            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_number2"
            android:text="Rating:3.5"
            android:textAlignment="center"
            android:textSize="14sp" />




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/iv_3"
        android:layout_width="match_parent"
