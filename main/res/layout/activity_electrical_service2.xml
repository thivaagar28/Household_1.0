            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Name2"
            android:text="0194450299"
            android:textAlignment="center"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_chk2"
